# CoreMatch Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git — it is in .gitignore

# ─────────────────────────────────────────────
# APP CORE
# ─────────────────────────────────────────────
NODE_ENV=production
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=CHANGE_ME_64_CHAR_HEX

# ─────────────────────────────────────────────
# DATABASE (Railway PostgreSQL)
# ─────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:PASSWORD@HOST:PORT/railway

# ─────────────────────────────────────────────
# REDIS (Railway Redis — for RQ job queue)
# ─────────────────────────────────────────────
REDIS_URL=redis://default:PASSWORD@HOST:PORT

# ─────────────────────────────────────────────
# CLOUDFLARE R2 (Video Storage)
# S3-compatible API
# ─────────────────────────────────────────────
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=corematch-videos
# Public URL after setting up custom domain in Cloudflare R2 settings
CLOUDFLARE_R2_PUBLIC_URL=https://videos.corematch.vercel.app
# R2 endpoint (replace ACCOUNT_ID)
CLOUDFLARE_R2_ENDPOINT=https://ACCOUNT_ID.r2.cloudflarestorage.com

# ─────────────────────────────────────────────
# AWS SES (Email Sending)
# ─────────────────────────────────────────────
AWS_SES_REGION=eu-west-1
AWS_SES_SMTP_HOST=email-smtp.eu-west-1.amazonaws.com
AWS_SES_SMTP_PORT=587
# From SES > SMTP Settings > Create SMTP Credentials
AWS_SES_SMTP_USERNAME=AKIA_YOUR_KEY
AWS_SES_SMTP_PASSWORD=your_ses_smtp_password
EMAIL_FROM_ADDRESS=noreply@corematch.ai
EMAIL_FROM_NAME=CoreMatch

# ─────────────────────────────────────────────
# GROQ API (AI Transcription + Scoring)
# Sign up at console.groq.com
# ─────────────────────────────────────────────
GROQ_API_KEY=gsk_your_groq_api_key
GROQ_TRANSCRIPTION_MODEL=whisper-large-v3
GROQ_SCORING_MODEL=llama-3.3-70b-versatile
GROQ_FALLBACK_MODEL=mixtral-8x7b-32768

# ─────────────────────────────────────────────
# TWILIO (SMS — optional)
# Only needed if SMS notifications are enabled
# ─────────────────────────────────────────────
SMS_ENABLED=false
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=ACyour_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# ─────────────────────────────────────────────
# SENTRY (Error Monitoring)
# Sign up at sentry.io
# ─────────────────────────────────────────────
SENTRY_DSN=https://KEY@ORG.ingest.sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=1.0

# ─────────────────────────────────────────────
# FRONTEND (Vercel)
# These are set in Vercel dashboard, not this file
# Listed here for reference
# ─────────────────────────────────────────────
# VITE_API_URL=https://your-railway-backend.up.railway.app
# VITE_SENTRY_DSN=https://KEY@ORG.ingest.sentry.io/PROJECT_ID

# ─────────────────────────────────────────────
# FEATURE FLAGS
# ─────────────────────────────────────────────
# Storage provider: r2 | local | s3
STORAGE_PROVIDER=r2
# Email provider: ses | mock
EMAIL_PROVIDER=ses
# Set to 'mock' for local development (prints emails to console)
# EMAIL_PROVIDER=mock

# ─────────────────────────────────────────────
# DEVELOPMENT ONLY
# ─────────────────────────────────────────────
# Uncomment for local development
# DATABASE_URL=postgresql://corematch:corematch@localhost:5432/corematch
# REDIS_URL=redis://localhost:6379
# STORAGE_PROVIDER=local
# EMAIL_PROVIDER=mock
# NODE_ENV=development
